<div class="page-header">
  <h3><%= @batter.batter_name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Team</dt>
      <dd><%= @batter.team.code %></dd>

      <dt>Hitting Side</dt>
      <dd><%= @batter.bats %></dd>

      <dt>First name</dt>
      <dd><%= @batter.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @batter.last_name %></dd>

      <dt>Full Name</dt>
      <dd><%= @batter.batter_name %></dd>

    </dl>

    <div class="page-header">
      <h3><%= @batter.batter_name %>'s Pitcher H2H Matchups</h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Opp Pitcher</th>
            <th>Opp Team</th>
            <th>#Pitches</th>
            <th>PA</th>
            <th>AB</th>
            <th>Hits</th>
            <th>2B</th>
            <th>3B</th>
            <th>HR</th>
            <th>Avg</th>
            <th>OBP</th>
            <th>Slg</th>
            <th>OPS</th>
            <th>wOBP</th>

          </tr>

          <% @pitcher_batters.each do |pitcher_batter| %>
          <tr>
            <td><a href="/pitchers/<%= pitcher_batter.pitcher_id %>" class="link_to"><%= pitcher_batter.pitcher_name %></td>
            <td><%= pitcher_batter.team_code %></td>
            <td><%= pitcher_batter.np %></td>
            <td><%= pitcher_batter.pa %></td>
            <td><%= pitcher_batter.ab %></td>
            <td><%= pitcher_batter.hits %></td>
            <td><%= pitcher_batter.double %></td>
            <td><%= pitcher_batter.triple %></td>
            <td><%= pitcher_batter.hr %></td>
            <td><%= pitcher_batter.avg %></td>
            <td><%= pitcher_batter.obp %></td>
            <td><%= pitcher_batter.slg %></td>
            <td><%= pitcher_batter.ops %></td>
            <td><%= pitcher_batter.woba %></td>

          </tr>
          <% end %>
        </table>






        <div class="btn-group btn-group-justified">
          <a href="/batters" class="btn btn-primary">
            Back
          </a>

        </div>
      </div>
    </div>
