<div class="page-header">
  <h3>Pitcher #<%= @pitcher.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Team</dt>
      <dd><%= @pitcher.team_id %></dd>
      <dt>Throws</dt>
      <dd><%= @pitcher.throws %></dd>

      <dt>First name</dt>
      <dd><%= @pitcher.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @pitcher.last_name %></dd>

      <dt>Pitcher name</dt>
      <dd><%= @pitcher.pitcher_name %></dd>
      <dt>Pitcher ID</dt>
      <dd><%= @pitcher.player_id %></dd>
      <dt>Player ID</dt>
      <dd><%= @pitcher.pitcher_id %></dd>

    </dl>


    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>

            <th>Batter</th>
            <th>Batter Team</th>
            <th>Np</th>
            <th>Pa</th>
            <th>Ab</th>
            <th>Hits</th>
            <th>Double</th>
            <th>Triple</th>
            <th>Hr</th>
            <th>Avg</th>
            <th>Obp</th>
            <th>Slg</th>
            <th>Ops</th>
            <th>Woba</th>
            
          </tr>

          <% @pitcher_batters.each do |pitcher_batter| %>
          <tr>

            <td><%= pitcher_batter.batter_name %></td>
            <td><%= pitcher_batter.team_code %></td>
            <td><%= pitcher_batter.np %></td>
            <td><%= pitcher_batter.pa %></td>
            <td><%= pitcher_batter.ab %></td>
            <td><%= pitcher_batter.hits %></td>
            <td><%= pitcher_batter.double %></td>
            <td><%= pitcher_batter.triple %></td>
            <td><%= pitcher_batter.hr %></td>
            <td><%= pitcher_batter.avg %></td>
            <td><%= pitcher_batter.obp %></td>
            <td><%= pitcher_batter.slg %></td>
            <td><%= pitcher_batter.ops %></td>
            <td><%= pitcher_batter.woba %></td>

                </tr>
          <% end %>
        </table>



    <div class="btn-group btn-group-justified">
      <a href="/pitchers" class="btn btn-primary">
        Back
      </a>
      <a href="/pitchers/<%= @pitcher.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_pitcher/<%= @pitcher.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
