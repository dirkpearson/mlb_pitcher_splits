<div class="page-header">
  <h3><%= @pitcher.pitcher_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_like" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for movie_id -->
      <div class="form-group">
        <input type="hidden" id="pitcher_id" name="pitcher_id" placeholder="Photo" class="form-control" value="<%= @pitcher.id %>">
      </div>

      <button class="btn btn-success">
        <i class="fa fa-star-o" aria-hidden="true"></i>
      </button>
    </form>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Team</dt>
      <dd><%= @pitcher.team.code.upcase %></dd>
      <dt>Throws</dt>
      <dd><%= @pitcher.throws %></dd>

      <dt>First name</dt>
      <dd><%= @pitcher.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @pitcher.last_name %></dd>

      <dt>Full Name</dt>
      <dd><%= @pitcher.pitcher_name %></dd>
      <dt>Pitcher ID</dt>
      <dd><%= @pitcher.player_id %></dd>
      <dt>Player ID</dt>
      <dd><%= @pitcher.pitcher_id %></dd>

    </dl>


    <div class="page-header">
      <h3><%= @pitcher.pitcher_name %>'s Batter H2H Matchups</h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>

            <th>Batter</th>
            <th>Batter Team</th>
            <th>#Pitches</th>
            <th>PA</th>
            <th>AB</th>
            <th>Hits</th>
            <th>2B</th>
            <th>3B</th>
            <th>HR</th>
            <th>Avg</th>
            <th>OBP</th>
            <th>Slg</th>
            <th>OPS</th>
            <th>wOPS</th>

          </tr>

          <% @pitcher_batters.each do |pitcher_batter| %>
          <tr>

            <td><a href="/batters/<%= pitcher_batter.batter_id %>" class="link_to"><%= pitcher_batter.batter.batter_name %></td>
            <td><%= pitcher_batter.team_code.upcase %></td>
            <td><%= pitcher_batter.np %></td>
            <td><%= pitcher_batter.pa %></td>
            <td><%= pitcher_batter.ab %></td>
            <td><%= pitcher_batter.hits %></td>
            <td><%= pitcher_batter.double %></td>
            <td><%= pitcher_batter.triple %></td>
            <td><%= pitcher_batter.hr %></td>
            <td><%= pitcher_batter.avg %></td>
            <td><%= pitcher_batter.obp %></td>
            <td><%= pitcher_batter.slg %></td>
            <td><%= pitcher_batter.ops %></td>
            <td><%= pitcher_batter.woba %></td>

          </tr>
          <% end %>
        </table>



        <div class="btn-group btn-group-justified">
          <a href="/pitchers" class="btn btn-primary">
            Back
          </a>
        </div>
      </div>
    </div>
