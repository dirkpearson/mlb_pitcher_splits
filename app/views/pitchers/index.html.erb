<div class="page-header">
  <h1>
    MLB Pitchers
  </h1>
</div>

<%= search_form_for @q do |f| %>
<p class="lead">Find your pitcher:</p>

<div class="form-group">
  <%= f.label :pitcher_name_cont, "Pitcher" %>
  <%= f.text_field :pitcher_name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
</div>

<div class="form-group">
  <%= f.label :team_code_eq, "Team" %>
  <%= f.text_field :team_code_eq, :class => "form-control", :placeholder => "Enter Team Abbreviation" %>
</div>

<%= f.submit :class => "btn btn-primary btn-block" %>

<a href="/pitchers" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team</th>
        <th>Pitcher name</th>
        <th>Throws</th>
        <th>ESPN ID</th>
        <th>Actions</th>
      </tr>

      <% @pitchers.each do |pitcher| %>
      <tr>
        <td><%= pitcher.team.code %></td>
        <td><%= pitcher.pitcher_name %></td>
        <td><%= pitcher.throws %></td>
        <td><%= pitcher.pitcher_id %></td>


        <td>
          <a href="/pitchers/<%= pitcher.id %>" class="btn btn-primary">See More</a>
          <a href="/delete_pitcher/<%= pitcher.id %>" rel="nofollow" class='btn btn-danger'><i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
