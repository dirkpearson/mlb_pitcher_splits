<div class="page-header">
  <h1>
    My Favorite Pitchers
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User Email</th>
        <th>Pitcher</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td><%= like.user_id %></td>
        <td><a href="/pitchers/<%= like.pitcher.id %>" class="link_to"><%= like.pitcher.pitcher_name %></td>
        <td>

          <a href="/my_likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_my_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
