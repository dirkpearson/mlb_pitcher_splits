<!-- Validation failure messages -->
<% if @stadium.errors.any? %>
  <% @stadium.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Stadium #<%= @stadium.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_stadium/<%= @stadium.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @stadium.name %>">
      </div>

      <!-- Label and input for team_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <input type="text" id="team_id" name="team_id" placeholder="Team" class="form-control" value="<%= @stadium.team_id %>">
      </div>

      <button class="btn btn-warning">
        Update Stadium
      </button>
      or
      <a href="/stadia/<%= @stadium.id %>">Cancel</a>
    </form>
  </div>
</div>
