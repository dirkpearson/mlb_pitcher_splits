<div class="page-header">
  <h1>
    MLB Stadiums
    <a href="/stadia/new" class="btn btn-lg btn-success">New Stadium</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>League</th>
        <th>Actions</th>
      </tr>

      <% @stadia.each do |stadium| %>
      <tr>
        <td><%= stadium.stadium_name %></td>
        <td><%= stadium.team.code %></td>
        <td>
          <a href="/stadia/<%= stadium.id %>" class="btn btn-primary">Show</a>
          <a href="/stadia/<%= stadium.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_stadium/<%= stadium.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
