<div class="page-header">
  <h1>
    Pitcher vs. Batter Historical Performance
    </h1>
</div>

<%= search_form_for @b do |f| %>
<p class="lead">Find a matchup:</p>

<div class="form-group">
  <%= f.label :pitcher_pitcher_name_cont, "Pitcher" %>
  <%= f.text_field :pitcher_pitcher_name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
</div>


<div class="form-group">
  <%= f.label :team_code_eq, "Batting Team" %>
  <%= f.select :team_code_eq, options_from_collection_for_select(@batter_teams, :team_code, :team_code), {:include_blank => true }, :class => "form-control" %>
</div>

<%= f.submit :class => "btn btn-primary btn-block" %>
<a href="/pitcher_batters" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Pitcher</th>
        <th>Batter</th>
        <th>Batter Team</th>
        <th>#Pitches</th>
        <th>PA</th>
        <th>AB</th>
        <th>Hits</th>
        <th>2B</th>
        <th>3B</th>
        <th>HR</th>
        <th>AVG</th>
        <th>OBP</th>
        <th>SLG</th>
        <th>OPS</th>
        <th>WOBA</th>
              </tr>

      <% @pitcher_batters.each do |pitcher_batter| %>
      <tr>
        <td><%= pitcher_batter.pitcher.pitcher_name %></td>
        <td><%= pitcher_batter.batter.batter_name %></td>
        <td><%= pitcher_batter.team_code.upcase %></td>
        <td><%= pitcher_batter.np %></td>
        <td><%= pitcher_batter.pa %></td>
        <td><%= pitcher_batter.ab %></td>
        <td><%= pitcher_batter.hits %></td>
        <td><%= pitcher_batter.double %></td>
        <td><%= pitcher_batter.triple %></td>
        <td><%= pitcher_batter.hr %></td>
        <td><%= pitcher_batter.avg %></td>
        <td><%= pitcher_batter.obp %></td>
        <td><%= pitcher_batter.slg %></td>
        <td><%= pitcher_batter.ops %></td>
        <td><%= pitcher_batter.woba %></td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
