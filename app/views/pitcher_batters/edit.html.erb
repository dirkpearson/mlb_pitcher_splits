        <input type="text" id="triple" name="triple" placeholder="Triple" class="form-control" value="<%= @pitcher_batter.triple %>">
      </div>

      <!-- Label and input for hr -->
      <div class="form-group">
        <label for="hr" class="control-label">
          Hr
        </label>

        <input type="text" id="hr" name="hr" placeholder="Hr" class="form-control" value="<%= @pitcher_batter.hr %>">
      </div>

      <!-- Label and input for avg -->
      <div class="form-group">
        <label for="avg" class="control-label">
          Avg
        </label>

        <input type="text" id="avg" name="avg" placeholder="Avg" class="form-control" value="<%= @pitcher_batter.avg %>">
      </div>

      <!-- Label and input for obp -->
      <div class="form-group">
        <label for="obp" class="control-label">
