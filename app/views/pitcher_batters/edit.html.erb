<!-- Validation failure messages -->
<% if @pitcher_batter.errors.any? %>
  <% @pitcher_batter.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Pitcher Batter #<%= @pitcher_batter.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_pitcher_batter/<%= @pitcher_batter.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for pitcher_id -->
      <div class="form-group">
        <label for="pitcher_id" class="control-label">
          Pitcher
        </label>

        <input type="text" id="pitcher_id" name="pitcher_id" placeholder="Pitcher" class="form-control" value="<%= @pitcher_batter.pitcher_id %>">
      </div>

      <!-- Label and input for batter_id -->
      <div class="form-group">
        <label for="batter_id" class="control-label">
          Batter
        </label>

        <input type="text" id="batter_id" name="batter_id" placeholder="Batter" class="form-control" value="<%= @pitcher_batter.batter_id %>">
      </div>

      <!-- Label and input for np -->
      <div class="form-group">
        <label for="np" class="control-label">
          Np
        </label>

        <input type="text" id="np" name="np" placeholder="Np" class="form-control" value="<%= @pitcher_batter.np %>">
      </div>

      <!-- Label and input for pa -->
      <div class="form-group">
        <label for="pa" class="control-label">
          Pa
        </label>

        <input type="text" id="pa" name="pa" placeholder="Pa" class="form-control" value="<%= @pitcher_batter.pa %>">
      </div>

      <!-- Label and input for ab -->
      <div class="form-group">
        <label for="ab" class="control-label">
          Ab
        </label>

        <input type="text" id="ab" name="ab" placeholder="Ab" class="form-control" value="<%= @pitcher_batter.ab %>">
      </div>

      <!-- Label and input for hits -->
      <div class="form-group">
        <label for="hits" class="control-label">
          Hits
        </label>

        <input type="text" id="hits" name="hits" placeholder="Hits" class="form-control" value="<%= @pitcher_batter.hits %>">
      </div>

      <!-- Label and input for double -->
