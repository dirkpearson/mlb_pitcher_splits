        <input type="text" id="ops" name="ops" placeholder="Ops" class="form-control" value="<%= @pitcher_batter.ops %>">
      </div>

      <!-- Label and input for woba -->
      <div class="form-group">
        <label for="woba" class="control-label">
          Woba
        </label>

        <input type="text" id="woba" name="woba" placeholder="Woba" class="form-control" value="<%= @pitcher_batter.woba %>">
      </div>

      <button class="btn btn-warning">
        Update Pitcher Batter
      </button>
      or
      <a href="/pitcher_batters/<%= @pitcher_batter.id %>">Cancel</a>
    </form>
  </div>
</div>
